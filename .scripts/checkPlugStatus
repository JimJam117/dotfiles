if [[ $(acpi) == *"100%"* ]]; then
	val=""
else
	val="$(acpi | cut -d'%' -f 1 | tail -c -3)"
fi

rem=" "

if [[ $(acpi) == *Discharging* ]]; then
	msg="ðŸ”‹"
	rem="[$(acpi | awk ' {print $5}' | cut -c 1-5)]"
elif [[ $(acpi) == *Charging* ]]; then
	msg="âš¡ "
	rem=" "
elif [[ $(acpi) == *"100%"* ]]; then 
	msg="BTRY FULL, UNPLUG"
else 
	msg="UKN"
fi

echo "$msg$rem $val%"

